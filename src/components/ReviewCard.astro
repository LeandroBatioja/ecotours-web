---
import StarRating from "./StarRating.astro";

const { name, avatar, rating, comment, destinationName, date, verified } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("es-EC", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="bg-white dark:bg-gray-800 rounded-2xl shadow-md p-6">
  <div class="flex items-start gap-4 mb-4">
    <img src={avatar} alt={name} class="w-12 h-12 rounded-full object-cover" />
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <h4 class="font-semibold text-gray-900 dark:text-white">{name}</h4>
        {verified && (
          <span class="flex items-center gap-1 bg-green-100 dark:bg-green-900/30 text-forest text-xs px-2 py-0.5 rounded-full font-medium">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
            </svg>
            Verificado
          </span>
        )}
      </div>
      <p class="text-xs text-gray-500 dark:text-gray-400">{formattedDate}</p>
    </div>
  </div>

  <StarRating rating={rating} />

  <p class="text-gray-700 dark:text-gray-300 mt-3 text-sm leading-relaxed">
    {comment}
  </p>

  <div class="mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
    <span class="text-xs text-gray-500 dark:text-gray-400">
      Destino: <span class="text-forest font-medium">{destinationName}</span>
    </span>
  </div>
</div>
