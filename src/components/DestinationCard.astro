---
const { title, image, slug } = Astro.props;
---

<a href={`/destinos/${slug}`} class="block">
  <div class="bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-lg hover:scale-[1.02] transition">
    <img src={image} class="h-52 w-full object-cover" />
    <div class="p-5">
      <h3 class="font-semibold text-lg mb-2 text-gray-900 dark:text-white">
        {title}
      </h3>
      <span class="text-forest font-medium">
        Ver más →
      </span>
    </div>
  </div>
</a>
