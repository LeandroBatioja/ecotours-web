---
const { title, image, slug, category, location, price } = Astro.props;
---

<a href={slug ? `/experiencias/${slug}` : "#"} class="block">
  <div class="bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-lg hover:scale-[1.02] transition">
    <div class="relative">
      <img src={image} class="h-60 w-full object-cover" />
      {category && (
        <span class="absolute top-3 left-3 bg-forest text-white text-xs font-semibold px-3 py-1 rounded-full capitalize">
          {category}
        </span>
      )}
    </div>
    <div class="p-5">
      <h4 class="font-semibold text-lg text-gray-900 dark:text-white mb-1">
        {title}
      </h4>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
          {location && (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {location}
            </span>
          )}
        </div>
        {price && (
          <span class="text-forest font-bold text-lg">${price}</span>
        )}
      </div>
    </div>
  </div>
</a>
