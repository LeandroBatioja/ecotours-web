---
const categories = ["todas", "aventura", "naturaleza", "cultural", "voluntariado"];
---

<div class="mb-10 space-y-4">
  <div class="relative">
    <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <input
      type="text"
      id="search-input"
      placeholder="Buscar experiencias..."
      class="w-full pl-12 pr-4 py-3 rounded-full border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-forest"
    />
  </div>

  <div class="flex flex-wrap gap-3" id="category-filters">
    {categories.map((cat) => (
      <button
        data-category={cat}
        class:list={[
          "px-5 py-2 rounded-full text-sm font-medium transition",
          cat === "todas"
            ? "bg-forest text-white"
            : "bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-forest hover:text-white",
        ]}
      >
        {cat.charAt(0).toUpperCase() + cat.slice(1)}
      </button>
    ))}
  </div>
</div>
