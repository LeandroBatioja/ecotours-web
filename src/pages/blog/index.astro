---
import BaseLayout from "../../layouts/BaseLayout.astro";

const posts = [
  {
    title: "¿Qué es el ecoturismo y por qué es vital para Ecuador?",
    slug: "que-es-ecoturismo",
    description:
      "Descubre qué es el ecoturismo, su importancia y cómo Ecuador lidera el turismo sostenible.",
  },
];
/** src\pages\blog\index.astro */
---

<BaseLayout>

<section class="max-w-5xl mx-auto px-8 py-20">
  <h1 class="text-4xl font-bold mb-10">Blog de Ecoturismo</h1>

  <div class="space-y-8">
    {posts.map((post) => (
      <a
        href={`/blog/${post.slug}`}
        class="block bg-white rounded-2xl p-6 shadow hover:shadow-lg transition"
      >
        <h2 class="text-2xl font-semibold mb-2">
          {post.title}
        </h2>
        <p class="text-gray-600">
          {post.description}
        </p>
      </a>
    ))}
  </div>
</section>

</BaseLayout>

