---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { paquetes } from "../../data/paquetes";

export function getStaticPaths() {
  return paquetes.map((p) => ({
    params: { slug: p.slug },
    props: { paquete: p },
  }));
}

const { paquete } = Astro.props;
---

<BaseLayout>

<!-- HERO -->
<section class="relative h-[60vh]">
  <img
    src={paquete.image}
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 h-full flex flex-col justify-end px-16 pb-16 text-white">
    <span class="bg-ecoOrange px-4 py-1.5 rounded-full text-sm font-bold w-fit mb-4">
      ${paquete.price} por persona
    </span>
    <h1 class="text-5xl font-bold mb-2">{paquete.title}</h1>
    <div class="flex items-center gap-4 text-lg opacity-90">
      <span class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {paquete.duration}
      </span>
    </div>
  </div>
</section>

<!-- DESCRIPCIÓN -->
<section class="max-w-5xl mx-auto px-8 py-16">
  <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
    {paquete.description}
  </p>

  <div class="flex flex-wrap gap-2 mt-6">
    {paquete.destinations.map((d) => (
      <span class="bg-green-100 dark:bg-green-900 text-forest px-4 py-1.5 rounded-full text-sm font-medium">
        {d}
      </span>
    ))}
  </div>
</section>

<!-- QUÉ INCLUYE + HIGHLIGHTS -->
<section class="max-w-5xl mx-auto px-8 pb-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
    <div>
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Qué incluye</h2>
      <ul class="space-y-3">
        {paquete.includes.map((item) => (
          <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-forest mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {item}
          </li>
        ))}
      </ul>
    </div>

    <div>
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Destacados</h2>
      <ul class="space-y-3">
        {paquete.highlights.map((item) => (
          <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
            <svg class="w-5 h-5 text-ecoOrange mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            {item}
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<!-- ITINERARIO -->
<section class="max-w-5xl mx-auto px-8 pb-16">
  <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white">Itinerario</h2>
  <div class="space-y-6">
    {paquete.itinerary.map((step) => (
      <div class="flex gap-6">
        <div class="flex flex-col items-center">
          <div class="w-12 h-12 rounded-full bg-forest text-white flex items-center justify-center font-bold text-lg flex-shrink-0">
            {step.day}
          </div>
          <div class="w-0.5 flex-1 bg-gray-200 dark:bg-gray-700 mt-2"></div>
        </div>
        <div class="pb-6">
          <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-1">{step.title}</h3>
          <p class="text-gray-600 dark:text-gray-400">{step.detail}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<!-- CTA RESERVAR -->
<section class="max-w-5xl mx-auto px-8 pb-24">
  <div class="bg-forest rounded-3xl p-10 text-center text-white">
    <h2 class="text-3xl font-bold mb-4">¿Listo para la aventura?</h2>
    <p class="text-lg opacity-90 mb-6">Reserva tu paquete {paquete.title} desde ${paquete.price} por persona</p>
    <a
      href={`/reservar/${paquete.slug}`}
      class="inline-block bg-ecoOrange px-10 py-4 rounded-full text-lg font-bold hover:bg-orange-500 transition"
    >
      Reservar ahora
    </a>
  </div>
</section>

</BaseLayout>
