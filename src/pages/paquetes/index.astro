---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PackageCard from "../../components/PackageCard.astro";
import { paquetes } from "../../data/paquetes";
---

<BaseLayout>

<section class="relative h-[50vh]">
  <img
    src="https://images.unsplash.com/photo-1501785888041-af3ef285b470"
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-black/50"></div>
  <div class="relative z-10 h-full flex flex-col items-center justify-center text-center text-white px-6">
    <h1 class="text-5xl font-bold mb-4">Paquetes Turísticos</h1>
    <p class="text-xl max-w-2xl opacity-90">
      Viajes completos diseñados para explorar lo mejor de Ecuador de forma sostenible
    </p>
  </div>
</section>

<section class="max-w-7xl mx-auto px-8 py-20">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {paquetes.map((p) => (
      <PackageCard
        title={p.title}
        image={p.image}
        slug={p.slug}
        price={p.price}
        duration={p.duration}
        destinations={p.destinations}
      />
    ))}
  </div>
</section>

</BaseLayout>
